<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0
                              http://maven.apache.org/xsd/settings-1.0.0.xsd">

    <activeProfiles>
        <activeProfile>gitea</activeProfile>
    </activeProfiles>

    <profiles>
        <profile>
            <id>gitea</id>
            <repositories>
                <!-- Maven Central -->
                <repository>
                    <id>central</id>
                    <url>https://repo1.maven.org/maven2</url>
                </repository>

                <!-- Your user’s Gitea package registry -->
                <repository>
                    <id>gitea_${OWNER}</id>
                    <url>https://gitea.roboter5123.com/api/packages/${OWNER}/maven</url>
                    <snapshots>
                        <enabled>true</enabled>
                    </snapshots>
                </repository>

                <!-- Shared org or another user’s packages (e.g., frameboter) -->
                <repository>
                    <id>gitea_frameboter</id>
                    <url>https://gitea.roboter5123.com/api/packages/frameboter/maven</url>
                    <snapshots>
                        <enabled>true</enabled>
                    </snapshots>
                </repository>
            </repositories>
        </profile>
    </profiles>

    <servers>
        <server>
            <id>gitea</id>
            <username>${OWNER}</username>
            <password>${ACCESS_TOKEN}</password>
        </server>
        <server>
            <id>gitea_${OWNER}</id>
            <username>${OWNER}</username>
            <password>${ACCESS_TOKEN}</password>
        </server>
        <server>
            <id>gitea_frameboter</id>
            <username>${OWNER}</username>
            <password>${ACCESS_TOKEN}</password>
        </server>
    </servers>
</settings>
